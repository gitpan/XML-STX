<stx:transform version="1.0" 
  xmlns:stx="http://stx.sourceforge.net/2002/ns"
  xmlns:sf="http://stx.sourceforge.net/2003/functions"
  strip-space="yes">

  <stx:template match="node">
    <n>
      <stx:value-of select="sf:position()"/>
      <stx:text>:</stx:text>
      <stx:value-of select="position()"/>
      <stx:text>:</stx:text>
      <stx:value-of select="sf:number(sf:position())"/>
      <stx:text>:</stx:text>
      <stx:value-of select="number(sf:position())"/>
    </n>
  </stx:template>

</stx:transform>
