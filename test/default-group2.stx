<stx:transform version="1.0" 
  xmlns:stx="http://stx.sourceforge.net/2002/ns"
  pass-through="all"
  strip-space="yes">

  <stx:template match="/root">
    <stx:process-children group="g1"/>
  </stx:template>

  <stx:group name="g1" pass-through="none">
   
    <stx:template match="node">
      [<node/>]
    </stx:template>

  </stx:group>

</stx:transform>
