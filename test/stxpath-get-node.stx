<stx:transform version="1.0" 
	       xmlns:stx="http://stx.sourceforge.net/2002/ns">

  <stx:options strip-space="yes" 
	       default-stxpath-namespace="http://test_ns"/>

  <stx:template match="node">
    <node>
      <stx:attribute name="name">
	<stx:value-of select="name(get-node(2))"/>
      </stx:attribute>
      <stx:attribute name="prefix">
	<stx:value-of select="prefix(get-node(2))"/>
      </stx:attribute>
      <stx:attribute name="local-name">
	<stx:value-of select="local-name(get-node(2))"/>
      </stx:attribute>
      <stx:attribute name="namespace">
	<stx:value-of select="namespace-uri(get-node(2))"/>
      </stx:attribute>
    </node>
  </stx:template>

</stx:transform>
