<stx:transform version="1.0" 
	       xmlns:stx="http://stx.sourceforge.net/2002/ns">

  <stx:options strip-space="yes"/>

  <stx:template match="*">
    <stx:element name="{name()}">
      <stx:text>p:</stx:text>
      <stx:value-of select="position()"/>
      <stx:process-children/>
    </stx:element>
  </stx:template>

</stx:transform>
