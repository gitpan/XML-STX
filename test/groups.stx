<stx:transform version="1.0" 
	       xmlns:stx="http://stx.sourceforge.net/2002/ns">

  <stx:options strip-space="yes"/>

  <stx:template match="/root">
    <stx:value-of select="name()"/>
    <stx:text>.</stx:text>
    <stx:value-of select="position()"/>
    <stx:process-children/>
  </stx:template>

  <stx:group>

    <stx:template match="node" visibility="public">
      <stx:text> </stx:text>
      <stx:value-of select="name()"/>
      <stx:text>.</stx:text>
      <stx:value-of select="position()"/>
    </stx:template>

  </stx:group>
  
</stx:transform>
